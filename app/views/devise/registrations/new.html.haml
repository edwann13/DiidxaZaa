%div.signupContainer
  %h2.signUpTitle Sign up
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .form-inputs
      .hi= f.input :email, required: true, autofocus: true, wrapper_html:{class: "newEmail"}
      .passwordInput= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
      .passwordInput= f.input :password_confirmation, required: true, :label => "Confirmation"
    .form-actions
      .submitButton 
        = f.button :submit, "Sign up"
  .loginSignUp
    = render "devise/shared/links"
