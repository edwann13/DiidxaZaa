<!DOCTYPE html>
%html
  %head
    %title>Diidxazaa
    = csrf_meta_tags
    <meta name="viewport" content="width=1024">
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light1
      %a.navbar-brand{:href => "#"} DiidxaZaa
      %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item.active
            %a.nav-link{:href => "#"}
              Home
              %span.sr-only (current)
          %li.nav-item
            %a.nav-link{:href => "#"} Gramatica
          %li.nav-item
            %a.nav-link{:href => "#"} Tracductor
          %li.nav-item
            %a.nav-link.disabled{:href => "#"} Videos

        %ul.navbar-nav.ml-auto
          -if user_signed_in?
            %li.nav-item
              =link_to "Log Out", destroy_user_session_path, method: :delete
          -else 
            %li.nav-item
              =link_to "Login", new_user_session_path
            


    = yield


